{
	"name": "WarezTogether",
	"version": "0.0.1",
	"manifest_version": 2,
	"description": "Uma extens√£o que te permite utilizar o wareztuga com quem mais gostas.",
	"content_scripts" : [{
		"matches" : ["http://dropvideo.com/embed/*"],
		"js" : ["js/vendor/jquery.min.js", "js/vendor/socket.io.min.js", "js/content.js"],
		"all_frames": true,
		"run_at" : "document_end"
	}],
	"background" : {
		"page": "background.html",
		"persistent": false
	},
	"page_action": {
		"default_icon": {
			"19": "img/icon-19.png",
			"48": "img/icon-48.png",
			"128": "img/icon-128.png"
		},
		"default_title": "WarezTogether",
		"default_popup": "popup.html"
	},
	"permissions" : [
		"tabs",
		"http://www.wareztuga.tv/"
	],
	"icons" : {
		"48" : "img/icon-48.png",
		"128" : "img/icon-128.png"
	},
	"web_accessible_resources": [
		"js/injected.js"
	],
	"externally_connectable": {
		"matches": ["http://dropvideo.com/embed/*"]
	},
	"content_security_policy": "script-src 'self'; object-src 'self'"
}